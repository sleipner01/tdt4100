<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="todolist.fxui.TodoSettingsController">
	<GridPane>
		<Label text="List order" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
		<ChoiceBox fx:id="listOrderSelector" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#handleListOrderSelection"/>
	</GridPane>
	<HBox>
		<Button text="Apply" onAction="#handleApplySettings"/>
		<Button text="Cancel" onAction="#handleCancelSettings"/>
	</HBox>
</VBox>
